<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdondeQuieresIr">


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_adonde_quieres_ir"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:gravity="center|center_horizontal"
            android:text="Holi"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:background="@drawable/hojita"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imageView"
            />

        <ImageView
            android:id="@+id/espacio"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/text_adonde_quieres_ir"
            android:background="@drawable/espacio">

        </ImageView>
        <TextView
            android:id="@+id/text_espacio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/espacio"
            android:gravity="center"
            android:textColor="#000000"
            android:text="Qué tal ir al espacio?"
            android:textSize="25dp">

        </TextView>


        <ImageView
            android:id="@+id/pavo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/text_espacio"
            android:background="@drawable/pavo">
        </ImageView>

        <TextView
            android:id="@+id/text_pavo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pavo"
            android:gravity="center"
            android:textColor="#000000"
            android:text="O imaginate un día en la selva"
            android:textSize="25dp">

        </TextView>

        <ImageView
            android:id="@+id/selvaa"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/text_pavo"
            android:background="@drawable/selvaa">

        </ImageView>

        <TextView
            android:id="@+id/text_selvaa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/selvaa"
            android:textSize="25dp"
            android:gravity="center"
            android:textColor="#000000"
            android:text="O ser tan pequeño como una hormiga"
            android:layout_marginBottom="20dp">

        </TextView>


    </RelativeLayout>

</ScrollView>


</RelativeLayout>