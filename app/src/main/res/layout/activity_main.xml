<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/pfondo">



    <RelativeLayout
        android:id="@+id/relative_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:fontFamily="@font/delius_unicase"
            android:gravity="center|center_horizontal"
            android:text="EN ESTA APP TÃš ERES EL PROTAGONISTA"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/hojita"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="10dp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relative_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/relative_logo">


        <ImageButton
            android:id="@+id/imageButton_registro"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/registro"

            />

        <ImageButton
            android:id="@+id/imageButton_inicio_sesion"
            android:layout_width="200dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/delius_unicase"
            android:layout_alignParentRight="true"
            android:background="@drawable/iniciosesion" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative_options">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/texto">

        </ImageView>

    </RelativeLayout>








</RelativeLayout>